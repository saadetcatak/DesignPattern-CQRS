@model DesignPattern_CQRS.CQRSPattern.Commands.CreateProductCommand
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post">
        <label>Ürün Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <label>KStok</label>
        <input type="text" asp-for="Stock" class="form-control" />
        <br />
        <label>Ürün Kategori</label>
        <input type="text" asp-for="CategoryID" class="form-control" />
        <br />
        <button class="btn btn-primary">Ürün Ekle</button>

    </form>
</div>
