@model DesignPattern_CQRS.MediatorDesignPattern.Commands.CreateCustomerCommand

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateCustomer</title>
</head>
<body>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCustomer">
           
            <div class="form-group">
                <label asp-for="Name" class="control-label">Müşteri Adı</label>
                <input asp-for="Name" class="form-control" />
                
            </div>
            <div class="form-group">
                    <label asp-for="Surname" class="control-label">Müşteri Soyadı</label>
                <input asp-for="Surname" class="form-control" />
               
            </div>
            <div class="form-group">
                    <label asp-for="Department" class="control-label">Müşteri Departmanı</label>
                <input asp-for="Department" class="form-control" />
               
            </div>
            <div class="form-group">
                <input type="submit" value="Müşteri Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Müşteri Listesi</a>
</div>

</body>
</html>
